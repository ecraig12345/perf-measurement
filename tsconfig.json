{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "pretty": true,
    "typeRoots": ["node_modules/@types", "typings"],
    "outDir": "lib"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
